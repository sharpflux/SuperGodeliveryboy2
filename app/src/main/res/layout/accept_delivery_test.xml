<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.699982dip"
                android:layout_marginTop="14.799988dip"
                android:layout_marginRight="16.699982dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.699982dip"
                    android:layout_marginTop="14.799988dip"
                    android:layout_marginRight="16.699982dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"
                            android:text="Distance"
                            android:textColor="@color/silver"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"

                            android:textColor="@color/black"
                            android:textSize="17.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:background="@color/viewline" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"
                            android:text="Delivery Time"
                            android:textColor="@color/silver"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@+id/txtEstimateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"
                            android:text="20 min"
                            android:textColor="@color/black"
                            android:textSize="17.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:background="@color/viewline" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"
                            android:text="Total amount"
                            android:textColor="@color/silver"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@+id/cardview_rupees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfui_text_regular"
                            android:letterSpacing="0.0525"
                            android:text="100 Rs"
                            android:textColor="@color/black"
                            android:textSize="17.0sp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/android_card_view_example2"
            android:layout_marginTop="0dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.699982dip"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:src="@drawable/circle_green" />

                    <LinearLayout
                        android:layout_width="1.0dip"
                        android:layout_height="150.0dip"
                        android:layout_gravity="center"
                        android:background="@drawable/dotted_linegray"
                        android:layerType="software"
                        android:orientation="vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle_red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:letterSpacing="0.0525"
                                android:text="Pickup Location"
                                android:textColor="@color/black"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@+id/txtPickupLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:letterSpacing="0.0525"
                                android:lineSpacingExtra="2.0dip"
                                android:textColor="@color/black"
                                android:textSize="14.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/navigationIv"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                android:src="@drawable/ic_navigation_48"
                                android:tint="#339dd8" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:letterSpacing="0.0525"
                                android:text="Drop Location"
                                android:textColor="@color/black"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@+id/txtDropLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:letterSpacing="0.0525"
                                android:lineSpacingExtra="2.0dip"
                                android:textColor="@color/black"
                                android:textSize="14.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/navigationDrop"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                android:src="@drawable/ic_navigation_48"
                                android:tint="#339dd8" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="08dp"
                android:paddingBottom="08dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:paddingLeft="08dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/custNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="02dp"
                        android:textColor="@color/blackShade"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/dropAddTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="02dp"
                        android:singleLine="true"
                        android:textColor="@color/blackShade"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/quantum_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnArrivedTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Arrived"
                    android:textAllCaps="true"
                    android:textColor="@color/blackShade"
                    android:textSize="@dimen/font_16" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/btnCancelRideTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Cancel Ride"
                    android:textAllCaps="true"
                    android:textColor="@color/blackShade"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="05dp">

                <LinearLayout
                    android:id="@+id/lr_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_call"
                        android:tint="#339dd8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="02dp"
                        android:text="Call"
                        android:textAllCaps="true"
                        android:textColor="@color/blackShade"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/pickedLlyt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrived_location_32"
                        android:tint="#ff23b53f" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="02dp"
                        android:text="Picked"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_13" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lr_drop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrived_location_32"
                        android:tint="#fffb4e4e" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="02dp"
                        android:text="Drop "
                        android:textAllCaps="true"
                        android:textColor="@color/blackShade"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancelLlyt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_ride_cancelled"
                        android:tint="@color/red" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="02dp"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:textColor="@color/blackShade"
                        android:textSize="@dimen/font_13" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

